
@{
    ViewBag.Title = "Afisare articole";
}

<div style="display: flex; justify-content: space-between;">
    <h2>@ViewBag.Title</h2>
    <form style="margin: auto 0;" method="post" action="/Article/SortArticles">
        <select class="form-control" name="SortType" onchange="this.form.submit()">
            <option value="Recent" selected="@(ViewBag.SortType == "Recent")">
                Cele mai recente
            </option>            
            <option value="Discussed" selected="@(ViewBag.SortType == "Discussed")">
                Cele mai discutate
            </option>
        </select>
    </form>
</div>
<hr />
@foreach (var article in ViewBag.Articles)
{
    <h2>@article.Title</h2>
    <p>@article.Content</p>
    <p>@article.Date</p>
    <p>@article.Category.CategoryName</p>
    <a href="/Article/Show/@article.Id">Afisare articol</a>
    <br />
    <hr />
    <br />
}
<br />
<a class="btn btn-success" href="/Category/Index">Afisare lista categorii</a>
<br />
<br />
<a class="btn btn-info" href="/Article/New">Adauga articol</a>
<br />
